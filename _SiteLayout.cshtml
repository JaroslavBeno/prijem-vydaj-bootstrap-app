@{
    
}

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
    <link rel="stylesheet" href="~/resources/styles/style.css">
    
    <title>@Page.Title</title>
  </head>
  <body>

    <nav class="navbar navbar-expand-md navbar-light" style="background-color: #e3f2fd;">
        <div class="container">
            <a class="navbar-brand" href="~/Home.cshtml">
                    <img src="/docs/4.1/assets/brand/bootstrap-solid.svg" width="30" height="30" alt="">
                Bootstrap
            </a>
            <button class="navbar-toggler" type="button" data-target="#navigaciaId" data-toggle="collapse" aria-controls="navigaciaId" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" ></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navigaciaId">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link @(functions.jeAktivna("Pridaj"))" href="~/Pridaj">Pridaj príjem/výdaj</a>
                    </li>
                    <li class="nav-item @(functions.jeAktivna("Prehlad"))">
                        <a class="nav-link" href="~/Prehlad">Prehľad</a>
                    </li>
                    <li class="nav-item @(functions.jeAktivna("Filter"))">
                        <a class="nav-link" href="~/Filter">Filter</a>
                    </li>
                </ul>

                @if (WebSecurity.IsAuthenticated)
                {
                    <span class="ml-auto">Ste prihlásený.</span>
                    <a class="ml-1 btn btn-sm btn-outline-primary" href="~/Account/Logout.cshtml">Log out</a>
                }
                else
                {
                    <a class="ml-auto btn btn-sm btn-outline-primary" href="~/Account/Login.cshtml">Log in</a>
                }

                @if (Roles.IsUserInRole("admin"))
                {
                    <p>user je admin</p>
                }

                @if (Roles.IsUserInRole("moderator"))
                {
                    <p>user je moderator</p>
                }
                
            </div>
        </div>
    </nav>

    @RenderBody()
    @RenderPage("~/_Footer.cshtml");
    
        
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
    <script src="~/resources/scripts/grafy.js"></script>
    <script src="~/resources/scripts/nase.js"></script>
</body>
</html>
